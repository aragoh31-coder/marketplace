[flake8]
max-line-length = 120
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    static,
    media,
    node_modules,
    build,
    dist,
    *.egg-info
ignore = 
    E203,
    E501,
    W503,
    F401,
    F403,
    F405
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F403,F405
    */migrations/*:F401,F403,F405