# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,[::1],testserver,your-onion-address.onion

# Database Configuration
DATABASE_URL=postgresql://marketplace_user:marketplace_password@localhost:5432/marketplace_db
DB_NAME=marketplace_db
DB_USER=marketplace_user
DB_PASSWORD=marketplace_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security Configuration
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Tor Configuration
TOR_PROXY_HOST=127.0.0.1
TOR_PROXY_PORT=9050
TOR_CONTROL_PORT=9051

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/workspace/media
STATIC_ROOT=/workspace/staticfiles

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/workspace/logs

# Wallet Configuration
BITCOIND_RPC_URL=http://127.0.0.1:8332
BITCOIND_RPC_USER=bitcoin_user
BITCOIND_RPC_PASSWORD=bitcoin_password
MONERO_WALLET_RPC_PORT=18082
MONERO_DAEMON_RPC_PORT=18081

# Captcha Configuration
CAPTCHA_IMAGE_SIZE=(120, 50)
CAPTCHA_LENGTH=5
CAPTCHA_TIMEOUT=300

# Marketplace Configuration
MARKETPLACE_NAME=Your Marketplace
MARKETPLACE_DESCRIPTION=Secure Anonymous Marketplace
MARKETPLACE_CONTACT_EMAIL=admin@your-marketplace.onion
MARKETPLACE_FEE_PERCENTAGE=2.5
MARKETPLACE_MIN_ORDER_AMOUNT=0.001

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=redis
RATELIMIT_VIEW=50/h
RATELIMIT_LOGIN=5/5m

# Session Configuration
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=3600
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000

# Security Headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Development Settings (set to False in production)
DJANGO_DEBUG_TOOLBAR=False
DJANGO_EXTENSIONS_ENABLED=False
